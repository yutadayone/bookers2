

<div class="container">
  
  
  <%= render 'books', user:@user %>
  
  
      <h2 class="mt-3">New book</h2>

<%= form_with model: @newbook do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

    </div>



<div class="col-md-8 offset-md-1">
  <div class="row">
  <h2>Book detail</h2>
  <table class="table">
    <tbody>
      <tr>
        <td>
<%= image_tag current_user.get_profile_image(100, 100) %><br>
<%= link_to current_user.name %>
        </td>
        <td>
          <%= link_to @book.title %>
        </td>
        <td>
          <%= @book.body %>
        </td>
        <td>

        </td>
      </tr>

    </tbody>
  </table>
  </div>
</div>

</div>


</div>





