
<div class="container px-5 px-sm-0">

    <%= render 'books/books', user:@user %>

    <h2 class="mt-3">New book</h2>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
</div>


<div class="col-md-8 offset-md-1">
  <div class="row">
  <h2>Books</h2>
  <table class="table">
      <thead>
          <tr>
              <th></th>
          <th>Title</th>
          <th>Opinion</th>
          </tr>
      </thead>
    <tbody>
      <tr>
        <td>
<%= image_tag current_user.get_profile_image(100, 100) %><br>
        </td>
        <td>
          <%= link_to @book.title, book_path(@book.id) %>
        </td>
        <td>
          <%= @book.body %>
        </td>
        <td>

        </td>
      </tr>

    </tbody>
  </table>
  </div>
</div>

</div>


</div>
