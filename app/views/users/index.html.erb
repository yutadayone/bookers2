<div class="container px-5 px-sm-0">
  <%= render 'books/books', user:@user %>
  
  <h2 class="mt-3">New book</h2>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
</div>

<div class="col-md-8 offset-md-1">
<div class="row">
  <h2>Users</h2>
  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>
          name
        </th>
        <th>
          
        </th>
      </tr>
    </thead>
    <tbody>

<% @books.each do |book| %>
  <tr>

  <td><%=  image_tag book.user.get_profile_image(100,100) %></td>
<td><%= current_user.name %></td>
  <td><%= link_to user_path(book.id) %>Show</td>
  </tr>
  <% end %>
  </tbody>
  </table>
</div>
</div>


</div>
</div>